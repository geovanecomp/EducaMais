<!DOCTYPE html>
<html>
<head>
  <title>EducaMais</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= nav_bar responsive: true, brand:"EducaMais - Educação como prioridade", brand_link: root_url do %>
      <%= menu_group pull: :right  do %>
          <%= menu_item "Inicio", root_path %>
          <%= menu_item "Escolas", root_path %>
          <%= menu_item "Cursos", root_path %>
          <%= menu_item "Sobre nós", root_path %>
          <%= menu_item "Contato", root_path %>
      <% end %>
  <% end %>
</head>
<body>
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
